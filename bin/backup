#!/bin/bash

main() {
  local duplicity_log="$HOME/.duplicity/log/duplicity.log"
  source "vars/export"

  duplicity \
    --verbosity info \
    --s3-european-buckets \
    --s3-use-new-style \
    --s3-use-server-side-encryption \
    --asynchronous-upload \
    --full-if-older-than 7D \
    --include-filelist "lists/inclusion-list" \
    --log-file "$duplicity_log" \
    "$@" \
    "$HOME" "$S3_DUPLICITY_DIR"

  source "vars/unset"
}

main "$@"
