#!/bin/bash

main() {
  source "vars/export"

  if [ $# -lt 2 ]; then echo "Usage $0 <file> <restore-to>"; exit; fi

  duplicity \
    --verbosity info \
    --s3-european-buckets \
    --s3-use-new-style \
    --s3-use-server-side-encryption \
    --file-to-restore "$1" \
    "$S3_DUPLICITY_DIR" "$2"

  source "vars/unset"
}

main "$@"
