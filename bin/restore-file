#!/bin/bash

main() {
  source "credentials"

  if [ $# -lt 2 ]; then echo "Usage $0 <file> <restore-to>"; exit; fi

  duplicity \
    --verbosity info \
    --s3-european-buckets \
    --s3-use-new-style \
    --s3-use-server-side-encryption \
    --file-to-restore "$1" \
    "$REMOTE" "$2"

  # Reset the ENV variables. Don't need them sitting around
  unset AWS_ACCESS_KEY_ID
  unset AWS_SECRET_ACCESS_KEY
  unset REMOTE
  unset PASSPHRASE
}

main "$@"
